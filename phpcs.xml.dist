<?xml version="1.0"?>
<ruleset name="PSR12 for sources">
    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12" />

    <rule ref="Generic.Files.LineLength.TooLong">
      <message>Line longer than %s characters; contains %s characters</message>
      <type>error</type>
     </rule>

    <!-- Paths to check -->
    <file>src</file>
    <file>test</file>
</ruleset>
